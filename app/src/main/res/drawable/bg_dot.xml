<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="ring" android:thickness="4dp" android:innerRadius="0dp" android:useLevel="false">
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>


    </item>

    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="ring" android:thickness="3dp" android:innerRadius="0dp" android:useLevel="false">
                    <solid android:color="@android:color/darker_gray" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>